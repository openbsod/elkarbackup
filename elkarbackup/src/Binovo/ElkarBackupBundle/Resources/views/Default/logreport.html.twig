<html>
    <head>
        <base href="{{base}}" target="_blank" />
    </head>
    <body>
        <table>
            <tr>
                <th>Client</th>
                <th>Job</th>
                <th>Time</th>
                <th>Level</th>
                <th>Message</th>
            </tr>
{% for message in messages %}
            <tr>
                <td>{{job.getClient.getName}}</td>
                <td>{{job.getName}}</td>
                <td>{{ message.dateTime.format('Y-m-d H:i:s') }}</td>
                <td>{{ message.levelName }}</td>
                <td>{{ message.message }}</td>
            </tr>
{% endfor %}
        </table>
    </body>
</html>
